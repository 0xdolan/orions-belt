# {{ service_name }} Configuration File
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# Host: {{ inventory_hostname }}

[service]
name = {{ service_name }}
port = {{ service_port }}
user = {{ service_user }}
group = {{ service_group }}

[directories]
config = {{ service_config_dir }}
data = {{ service_data_dir }}
logs = {{ service_log_dir }}

[logging]
level = {{ log_level }}
format = {{ log_format }}

[security]
max_connections = {{ max_connections }}
timeout = {{ timeout }}

{% if vault_vars is defined and vault_vars %}
# Vault variables are available
secret_key = {{ service_secret_key }}
{% endif %}

